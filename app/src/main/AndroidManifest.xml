<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.lemeut.loic.musketeeth" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity  android:name=".LavageStartActivity" android:label="@string/app_name"></activity>
        <activity  android:name=".LavageEndStatsActivity" android:label="@string/app_name"></activity>
    </application>

    <provider android:authorities="com.facebook.app.FacebookContentProvider1424868894506724"
        android:name="com.facebook.FacebookContentProvider"
        android:exported="true"/>
    <activity android:name="com.facebook.FacebookActivity"
        android:configChanges=
            "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
        android:theme="@android:style/Theme.Translucent.NoTitleBar"
        android:label="@string/app_name" />
    <uses-permission android:name="android.permission.INTERNET"/>
</manifest>
